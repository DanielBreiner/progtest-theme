{
    "name": "ProgTest Themes",
    "version": "1.0.3",
    "description": "Theme manager for ProgTest",
    "manifest_version": 2,
    "content_scripts": [
        {
            "run_at": "document_start",
            "js": ["content.js"],
            "matches": ["*://progtest.fit.cvut.cz/*"],
            "all_frames": true
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://progtest.fit.cvut.cz/*",
        "storage",
        "declarativeContent",
        "tabs"
    ],
    "browser_action": {
        "default_title": "",
        "default_icon": "icon.png",
        "default_popup": "options/options.html"
    },
    "icons": {
        "128": "icon.png"
    },
    "web_accessible_resources": [
        "themes/*"
    ]
}
