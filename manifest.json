{
    "name": "ProgTest Themes",
    "version": "1.0.2",
    "description": "Theme manager for ProgTest",
    "manifest_version": 2,
    "content_scripts": [
        {
            "run_at": "document_start",
            "js": ["content.js"],
            "matches": ["*://progtest.fit.cvut.cz/*"],
            "all_frames": true
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://progtest.fit.cvut.cz/*",
        "storage",
        "declarativeContent"
    ],
    "icons": {
        "128": "icon.png"
    },
    "web_accessible_resources": [
        "themes/*"
    ],
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": false
    },
    "page_action": {
        "default_popup": "options/options.html"
    }
}
